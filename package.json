{
  "name": "esri-leaflet-geocoder",
  "version": "2.0.0-beta.1",
  "description": "Esri Geocoding utilities and search plguin for Leaflet.",
  "homepage": "https://github.com/Esri/esri-leaflet-geocoder",
  "main": "dist/esri-leaflet-geocoder.js",
  "style": "dist/esri-leaflet-geocoder.css",
  "repository": {
    "type": "git",
    "url": "git@github.com:Esri/esri-leaflet-geocoder.git"
  },
  "scripts": {
    "lint": "semistandard src/**/*.js",
    "css": "node-sass ./src/esri-leaflet-geocoder.css ./dist/esri-leaflet-geocoder.css --output-style compressed",
    "img": "imagemin ./src/img ./dist/img",
    "prepublish": "./scripts/build.js && npm run css && npm run img",
    "pretest": "esperanto -i src/EsriLeafletGeocoding.js -o ./dist/esri-leaflet-geocoder-src.js --skip=leaflet,esri-leaflet --t umd --strict --name L.esri.Geocoding --bundle -m inline",
    "test": "npm run lint && karma start",
    "posttest": "rm ./dist/esri-leaflet-geocoder-src.js",
    "release": "./scripts/release.sh"
  },
  "devDependencies": {
    "babelify": "^6.1.3",
    "chai": "2.3.0",
    "esperanto": "^0.7.3",
    "gh-release": "^2.0.0",
    "imagemin": "^3.2.0",
    "isparta": "^3.0.3",
    "istanbul": "gotwarlost/istanbul.git#source-map",
    "karma": "^0.12.24",
    "karma-chai-sinon": "^0.1.3",
    "karma-coverage": "douglasduteil/karma-coverage#next",
    "karma-mocha": "^0.1.0",
    "karma-mocha-reporter": "^0.2.5",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-sourcemap-loader": "^0.3.5",
    "node-sass": "^3.2.0",
    "phantomjs": "^1.9.17",
    "rollup": "^0.10.0",
    "semistandard": "^6.1.2",
    "sinon": "^1.11.1",
    "sinon-chai": "2.7.0",
    "uglify-js": "^2.4.23"
  },
  "author": "Patrick Arlt <parlt@esri.com> (http://patrickarlt.com)",
  "contributors": [
    "Patrick Arlt <parlt@esri.com> (http://patrickarlt.com)",
    "John Gravois <jgravois@esri.com> (http://johngravois.com)"
  ],
  "license": "Apache 2.0",
  "readmeFilename": "README.md",
  "dependencies": {
    "leaflet": "1.0.0-beta.1",
    "esri-leaflet": "^2.0.0-beta.1"
  },
  "files": [
    "dist/esri-leaflet-geocoder.js",
    "dist/esri-leaflet-geocoder.css",
    "dist/img"
  ],
  "jspm": {
    "main": "./index.js",
    "directories": {
      "lib": "./lib"
    },
    "registry": "npm",
    "format": "es6"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "jsnext:main": "./index.js"
}
